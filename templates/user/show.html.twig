{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background-color: #f8f9fa;
        }

        h1 {
            color: #007bff;
        }

        .table {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            text-align: center;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        a.button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 18px;
            text-align: center;
            text-decoration: none;
            background-color: #28a745;
            color: #fff;
            border-radius: 5px;
            margin-top: 10px;
        }

        a.button:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr> #}
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Saldo</th>
                <td>{{ user.saldo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_main') }}" class="button">Vuelve al inicio</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="button">Añádete saldo</a>

    {# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
