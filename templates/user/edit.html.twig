{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        h1 {
            color: #007bff;
        }

        .form-container {
            margin: 1em auto;
            max-width: 400px;
            width: 95%;
            font: 18px/1.5 sans-serif;
            text-align: center;
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        a.button {
            display: inline-block;
            padding: 10px 20px;
            font-size: 18px;
            text-align: center;
            text-decoration: none;
            background-color: #28a745;
            color: #fff;
            border-radius: 5px;
            margin-top: 10px;
        }

        a.button:hover {
            background-color: #218838;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Añadir saldo</h1>

    <div class="form-container">
        {{ include('user/_form.html.twig', {'button_label': 'Añádete el saldo'}) }}<br>
    </div>

    <a href="{{ path('app_user_show', {'id': app.user.id}) }}" class="button">Vuelve a tu perfil</a><br>
    <a href="{{ path('app_main') }}" class="button">Vuelve al inicio</a>

    {# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}

